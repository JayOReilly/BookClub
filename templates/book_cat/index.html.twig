{% extends 'base.html.twig' %}

{% block title %}Add a book & Leave a review for others{% endblock %}

{% block body %}
    <h1>Book Reviews</h1>
    <h2>Add a book and leave a review </h2>
    <style>
        .h2 {
            color: #333;
            overflow: hidden;
             }
    </style>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Reviews</th>
                <th>Rating</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book_cat in book_cats %}
            <tr>
                <td>{{ book_cat.id }}</td>
                <td>{{ book_cat.Title }}</td>
                <td>{{ book_cat.Author }}</td>
                <td>{{ book_cat.Reviews }}</td>
                <td>{{ book_cat.Rating }}</td>
                <td>
                    <a href="{{ path('book_cat_show', {'id': book_cat.id}) }}" title="You should view the other books while your at it!">show</a>


                    <a href="{{ path('book_cat_edit', {'id': book_cat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_cat_new') }}">Create new</a>
{% endblock %}
